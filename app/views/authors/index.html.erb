<p id="notice"><%= notice %></p>

<h1>Authors</h1>
<%= link_to 'Home', root_path %>
<%= link_to 'Authors', authors_path %>
<br />
<br />
<%= form_tag(authors_path, method: "get") do %>
  <%= label_tag(:authors, "Search for:") %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Authors" %>
  <%=submit_tag("Search") %>
<% end %>

<% if @authors.blank? %>
  <h4>There are no authors containing the term <%= params[:search] %>.</h4>
<% end %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.age %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
