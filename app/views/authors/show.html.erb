<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @author.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @author.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @author.age %>
</p>


<p>
  <strong>Book(s):</strong>
    <% @author.books.each do |book|%>
      <%= link_to book.title, book_path(book) %>
    <% end %>
</p>

